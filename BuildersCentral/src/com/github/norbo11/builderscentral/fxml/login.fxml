<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" prefWidth="1200" prefHeight="720" hgap="10.0" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.github.norbo11.builderscentral.controllers.LoginController">
  <columnConstraints>
    <ColumnConstraints prefWidth="100.00" />
  </columnConstraints>
	
  <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>
  <children>
    <Text text="BuildersCentral" textAlignment="CENTER" GridPane.columnSpan="2" wrappingWidth="300">
      <font>
        <Font size="25.0" />
      </font>
    </Text>
    
   <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="usernameField" />

   <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="passwordField" />
       
   <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
     <children>
       <Button onAction="#submitLogin" prefHeight="25.0" prefWidth="110.0" text="Sign In" />
       <Text text="" textAlignment="CENTER" wrappingWidth="300" fx:id="statusText"></Text>
     </children>
    </HBox>
  </children>
</GridPane>
